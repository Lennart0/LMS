@model  IEnumerable<LMS.Models.ApplicationUser>

@{
    ViewBag.Title = "CourseInfoAndStudents";
}

<h2>Course: <span class="text-success">@ViewBag.CourseName</span></h2>
<br />
<h4>Description</h4>
<div class="text-description">
    @ViewBag.CourseDescription
</div>

<br /><br />

<h4>Students</h4>
<table class="table table-responsive table-striped table-width">
    <tr>
        <th id="tableCol2">
            @Html.DisplayNameFor(model => model.FullName)
        </th>

        <th id="tableCol2">
            @Html.DisplayNameFor(model => model.Email)
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    }
</table>


