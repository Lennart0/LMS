

@model IEnumerable<LMS.Models.Course>

@{
    ViewBag.Title = "CourseInfoAndStudents";
}

<br />
<h3>Course register</h3>
<br />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(linkText: item.Name, actionName: "CourseStudentList", controllerName: "Courses", routeValues: new { id = item.Id }, htmlAttributes: new { @id = "courseLink" })
            </td>
            <td id="tableCell">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
        </tr>
    }

</table>


