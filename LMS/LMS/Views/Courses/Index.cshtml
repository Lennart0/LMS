@model IEnumerable<LMS.Models.Course>

@{
    ViewBag.Title = "Index";
}
<script type="text/javascript">
    window.addEventListener("load", function () {
        var x = document.getElementById("test");
        x.setAttribute("style", "display:initial");

    })

</script>
 

<br />
<div class="col-md-4">
    <h3>Course register</h3>
</div>

<div class="col-md-2">
    <br />
    @Html.ActionLink("Add a New Course", "Create", null, new { @class = "btn btn-default" })
</div>

<div class="col-md-2">
    <br />
    @Html.ActionLink(linkText: "Add a New Teacher", actionName: "Register", controllerName: "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
</div>

<br /><br /><br /><br />
<table class="table">

    <tr>
        <th id="tableCol1">
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th id="tableCol1">
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th id="tableCol1">
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th id="tableCol1">
            @Html.DisplayNameFor(model => model.End)
        </th>

        <th id="tableCol1"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td id="tableCell">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-custom" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-custom" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-custom" })
            </td>
        </tr>
    }

</table>
